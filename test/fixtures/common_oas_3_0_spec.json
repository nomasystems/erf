{
    "components": {
        "schemas": {
            "Foo": {
                "type": "string",
                "description": "A foo",
                "enum": [
                    "bar",
                    "baz"
                ]
            },
            "AnyOfObject": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "foo": {
                        "type": "string"
                    },
                    "bar": {
                        "type": "string"
                    }
                },
                "anyOf": [
                    { "required": ["foo"] },
                    { "required": ["bar"] }
                ]
            },
            "OneOfObject": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "foo": {
                        "type": "string"
                    },
                    "bar": {
                        "type": "string"
                    }
                },
                "oneOf": [
                    { "required": ["foo"] },
                    { "required": ["bar"] }
                ]
            },
            "Error": {
                "type": "object",
                "properties": {
                    "description": {
                        "type": "string",
                        "description": "An English human-friendly description of the error."
                    }
                }
            }
        },
        "responses": {
            "NoContent": {
                "description": "The request was successful but there is no representation to return."
            },
            "NotFound": {
                "description": "The requested resource was not found.",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        }
                    }
                }
            }
        },
        "parameters": {
            "Version": {
                "in": "path",
                "name": "version",
                "schema": {
                    "type": "string",
                    "pattern": "^[0-9]+$"
                },
                "required": true,
                "description": "Version of the API"
            },
            "Enabled": {
                "in": "query",
                "name": "enabled",
                "schema": {
                    "type": "boolean"
                },
                "required": false,
                "description": "Filter by enabled"
            }
        },
        "requestBodies": {
            "PostFoo": {
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Foo"
                        }
                    }
                }
            },
            "AnyOfBody": {
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/AnyOfObject"
                        }
                    }
                }
            },
            "OneOfBody": {
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/OneOfObject"
                        }
                    }
                }
            }
        }
    }
}
